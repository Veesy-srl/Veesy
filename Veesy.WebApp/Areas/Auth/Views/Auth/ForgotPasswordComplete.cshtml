@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Forgot Password Complete";
}

<div class="vertical-center text-center bg-grey-veesy bg-auth">
    <div class="container">
        <div class="row row-login-padding">
            <div class="col-md-6 offset-md-3">
                <form method="post">
                    <h1 class="h3 mb-2 mt-4 pt-5 mt-md-3 pt-md-0 fw-normal text-color">Trouble with loggin in?</h1>
                    <h5 class="mt-3 mb-3 size-custom text-color">Enter your email address or username, we'll send you a link to reset your password.</h5>
                    <div style="height: 20px;"></div>
                    
                    <div class="text-center rounded size-custom pt-1" style="background-color: #B7DBE3; font-weight:  500;">
                        Reset Link sent!<br/>check your email to reset your password.
                    </div>
                    <p class="mt-4 mb-3 fw-border size-custom">
                        <button class="w-100 mt-2 rounded-pill btn btn-primary signup a-font-p" type="submit" asp-action="Login" asp-area="Auth" asp-controller="Auth">Login</button>
                    </p>

                    <p class="mt-4 mb-5 fw-border size-custom">Don't have an account?
                        <a class="a-font-p" style="color:#75CCDD !important;" asp-action="SignUp" asp-area="Auth" asp-controller="Auth">Sign up</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>