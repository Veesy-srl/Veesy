@model Veesy.Presentation.Model.Auth.SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
}
<style>
    
</style>

<div class="vertical-center text-center bg-grey-veesy bg-auth">
    <div class="container">
        <div class="row row-login-padding">
            <div class="col-md-6 offset-md-3">
                <form method="post">
                    <h1 class="h4 mb-2 mt-4 pt-5 mt-md-3 pt-md-0 fw-normal">First time here? <br/>Welcome!</h1>
                    <div style="height: 10px;"></div>
                    <div class="d-flex size-custom">
                        <div class="col-6 pe-2">
                            <div class="input-group">
                                <p class="mb-0 fw-border size-custom"><strong>First Name*</strong></p>
                                <input onkeydown="return alphaOnly(event);"  asp-for="Name" class="input--style-1" type="text">
                            </div>
                        </div>
                        <div class="col-6 ps-2">
                            <div class="input-group">
                                <p class="mb-0 fw-border size-custom"><strong>Last Name*</strong></p>
                                <input onkeydown="return alphaOnly(event);" asp-for="Surname" class="input--style-1" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="input-group ">
                        <p class="mb-0 fw-border size-custom"><strong>Username*</strong></p>
                        <input class="input--style-1" type="text">
                    </div>
                    <div class="input-group">
                        <p class="mb-0 fw-border size-custom"><strong>Email*</strong></p>
                        <input asp-for="Email" class="input--style-1" type="email">
                    </div>
                    <div class="d-flex">
                        <div class="col-6 pe-2">
                            <div class="input-group">
                                <p class="mb-0 fw-border size-custom"><strong>Password*</strong></p>
                                <div class="d-flex">
                                    <input id="password" asp-for="Password" class="input--style-password" type="password">
                                    <span class="input-group-append border-left-0">
                                        <a onclick="switchPassword()" class="input-group-text span--style-password bg-transparent">
                                            <i id="password-eye" class="fa-solid fa-eye"></i>
                                        </a>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 ps-2">
                            <div class="input-group">
                                <p class="mb-0 fw-border size-custom"><strong>Repeat Password*</strong></p>
                                <div class="d-flex">
                                    <input id="passwordconfirm" asp-for="ConfirmPassword" class="input--style-password" type="password">
                                    <span class="input-group-append border-left-0">
                                        <a onclick="switchConfirmPassword()" class="input-group-text span--style-password bg-transparent">
                                            <i id="passwordconfirm-eye" class="fa-solid fa-eye"></i>
                                        </a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="input-group">
                        <p class="mb-0 fw-normal size-custom"><strong>Category*</strong></p>
                        <select asp-for="SelectedCategoriesWork" multiple class="w-100 size-custom selectpicker">
                            @foreach (var item in Model.CategoriesWork)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mt-3 mb-2 text-muted" style="font-size: 13px;">By signing up you accept our 
                        <a class="text-muted text-decoration-underline" href="#">Site Policy</a>
                        and
                        <a class="text-muted text-decoration-underline" href="#">Privacy Policy</a>
                    </div>
                        
                    <div class="d-flex text-center">
                        <input type="checkbox" class=" me-2 form-check-input mt-check-input border-0" id="rememberme" checked>
                        <p style="cursor: pointer" class="mt-1 form-check-label size-custom" for="rememberme"><strong>Remember me</strong></p>
                    </div>

                    <button class="w-100 mt-1 rounded-pill btn btn-primary signup" type="submit">Join</button>
                    <p class="mt-3 fw-border size-custom mb-5 pb-5 mb-md-3 pb-md-3">Already have an account?
                        <a class="a-ciano" asp-action="Login" asp-area="Auth" asp-controller="Auth">Log in</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
    
        function alphaOnly(event) {
          var key = event.keyCode;
          return ((key >= 65 && key <= 90) || key == 8);
        };
        
        var passwordClose = true;
        var passworConfirmClose = true;
        
        function switchPassword(){
            if (passwordClose){
                passwordClose = false;
                document.getElementById("password").type = "text";
                document.getElementById("password-eye").classList.remove("fa-eye");
                document.getElementById("password-eye").classList.add("fa-eye-slash");
            }
            else{
                passwordClose = true;
                document.getElementById("password").type = "password";
                document.getElementById("password-eye").classList.add("fa-eye");
                document.getElementById("password-eye").classList.remove("fa-eye-slash");
            }
        }
        
        function switchConfirmPassword() {
            if (passworConfirmClose){
                passworConfirmClose = false;
                document.getElementById("passwordconfirm").type = "text";
                document.getElementById("passwordconfirm-eye").classList.remove("fa-eye");
                document.getElementById("passwordconfirm-eye").classList.add("fa-eye-slash");
            }
            else{
                passworConfirmClose = true;
                document.getElementById("passwordconfirm").type = "password";
                document.getElementById("passwordconfirm-eye").classList.add("fa-eye");
                document.getElementById("passwordconfirm-eye").classList.remove("fa-eye-slash");
            }
        }
    </script>
}

