@model Veesy.Presentation.Model.Auth.SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
}
<style>
    
</style>

    <div class="vertical-center text-center bg-grey-veesy bg-auth">
        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <form method="post">
                        <h1 class="h4 mb-3 mt-2 fw-normal">First time here? <br/>Welcome!</h1>
                        <div style="height: 10px;"></div>
                        <div class="d-flex size-custom">
                            <div class="col-6 pe-2">
                                <div class="input-group">
                                    <p class="mb-0 fw-border"><strong>Name*</strong></p>
                                    <input asp-for="Name" class="input--style-1" type="text">
                                </div>
                            </div>
                            <div class="col-6 ps-2">
                                <div class="input-group">
                                    <p class="mb-0 fw-border"><strong>Surname*</strong></p>
                                    <input asp-for="Surname" class="input--style-1" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="input-group size-custom">
                            <p class="mb-0 fw-border"><strong>Username*</strong></p>
                            <input asp-for="Username" class="input--style-1" type="text">
                        </div>
                        <div class="input-group size-custom">
                            <p class="mb-0 fw-border"><strong>Email*</strong></p>
                            <input asp-for="Email" class="input--style-1" type="email">
                        </div>
                        <div class="d-flex size-custom">
                            <div class="col-6 pe-2">
                                <div class="input-group">
                                    <p class="mb-0 fw-border"><strong>Password*</strong></p>
                                    <input asp-for="Password" class="input--style-1" type="password">
                                </div>
                            </div>
                            <div class="col-6 ps-2">
                                <div class="input-group">
                                    <p class="mb-0 fw-border"><strong>Repeat Password*</strong></p>
                                    <input asp-for="ConfirmPassword" class="input--style-1 " type="password">
                                </div>
                            </div>
                        </div>
                        <div class="input-group">
                            <p class="mb-0 fw-normal mb-1"><strong>Category*</strong></p>
                            <select asp-for="SelectedCategoriesWork" multiple class="w-100 size-custom selectpicker">
                                <option disabled="">select up to three categories</option>
                                @foreach (var item in Model.CategoriesWork)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <p class="mt-3 text-muted" style="font-size: 13px;">By signing up you accept our 
                            <a class="text-muted text-decoration-underline" href="#">Site Policy</a>
                            and
                            <a class="text-muted text-decoration-underline" href="#">Privacy Policy</a>
                        </p>
                        
                        <div class="d-flex text-center">
                            <input type="checkbox" class=" me-2 form-check-input mt-check-input border-0" id="rememberme" checked>
                            <p style="cursor: pointer" class="mt-1 form-check-label size-custom" for="rememberme"><strong>Remember me</strong></p>
                        </div>

                        <button class="w-100 mt-2 rounded-pill btn btn-primary signup" type="submit">Join</button>
                        <p class="mt-3 mb-3 fw-border size-custom">Already have an account?
                            <a style="color:#75CCDD; " asp-action="Login" asp-area="Auth" asp-controller="Auth">Log in</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>