@model Veesy.Presentation.Model.Auth.SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="mt-60-minus login-container">
    <div class="logo-container vertical-center">
        <img class="w-100" src="~/imgs/Auth/login-bg.png" alt="">
    </div>
    <div class="vertical-center text-center bg-grey-veesy" style="border-bottom-left-radius: 10px; border-top-left-radius: 10px; margin-left: -10px;">
        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <form method="post">
                        <h1 class="h3 mb-3 fw-normal">First time here? <br/>Welcome!</h1>
                        <div style="height: 50px;"></div>
                        <div class="d-flex">
                            <div class="col-6 pe-2">
                                <div class="input-group">
                                    <input asp-for="Name" class="input--style-1" type="text" placeholder="name*">
                                </div>
                            </div>
                            <div class="col-6 ps-2">
                                <div class="input-group">
                                    <input asp-for="Surname" class="input--style-1" type="text" placeholder="surname*">
                                </div>
                            </div>
                        </div>
                        <div class="input-group">
                            <input asp-for="Email" class="input--style-1" type="email" placeholder="email*">
                        </div>
                        <div class="input-group">
                            <input asp-for="Username" class="input--style-1" type="text" placeholder="username*">
                        </div>
                        <div class="input-group">
                            <input asp-for="Password" class="input--style-1" type="password" placeholder="password*">
                        </div>
                        <p class="mt-3 text-muted">I accept
                            <a class="a-ciano" href="#">Terms & Conditions</a>
                        </p>
                        
                        <button class="w-50 rounded-pill btn btn-lg btn-primary mt-4" type="submit">Join the community!</button>
                        <p class="mt-5 mb-3 text-muted">Already have an account?
                            <a class="a-ciano" asp-action="Login" asp-area="Auth" asp-controller="Auth">Log in</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>