      height: 50px;
      background-color: #f97cc4;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      position: relative;
      left: 30px;
    }
    
    .text-about-circle1{
        position:  relative;
        top: 15px;
        left: -15px;
    }
    
    .circle2 {
      width: 100px;
      height: 100px;
      background-color: #8BD1DF;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      position: relative;
      top: -25px;
      left: 40px;
      z-index: 8;
    }
    
    .text-about-circle2{
        position:  relative;
        top: 15px;
        left: -20px;
    }
    
    .circle3 {
      width: 150px;
      height: 150px;
      background-color: #2DDEA0;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      position: relative;
      top: -47px;
      left: 25px;
    }
    
    .text-about-circle3{
        position: relative;
        top: 20px;
        left: -25px;
    }
    
    .overlay-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    
    .custom-cursor {
        width: 100px;
        height: 100px;
        background-color: #FF61BB; 
        border-radius: 50%; 
        color: white;
        font-size: 18px; 
        display: none; 
        position: fixed; 
        pointer-events: none;
        z-index: 9999;
        top: 0;
        left: 0;
        text-align: center;
        line-height: 100px;
    }
    
    .about-circle-option{
        border: 1px solid;
        border-radius: 55%;
        width: 35px;
        height: 42px;
        padding: 9px;
        position: relative;
        top: -10px;
    }
    
    .option-circle-2{
        justify-content: flex-end !important;
    }
    
     .option-circle-text-2{
        margin-left: -15px; 
        z-index: 9 !important;
     }
     
     .option-circle-text-3{
         left: -15px;
         position: relative;
         z-index: 9 !important;
     }

    @@media screen and (max-width: 600px) {
        .circle1 {
            left:  5px;
        }
        
        .circle2{
            left:  -5px;
            top: 0px;
        }
        
        .option-circle-2{
            justify-content: flex-start !important;
        }
        
