@using Veesy.Domain.Constants
@model Veesy.Presentation.Model.Cloud.SingleMediaViewModel

@{
    ViewData["Title"] = @Model.Media.OriginalFileName;
    Layout = "";
}
<style>
    body, html {
      height: 100%;
      margin: 0;
    }
    
    .bg {
      /* The image used */
      background-image: url('@Model.BasePath@Model.Media.FileName');
    
      /* Full height */
      height: 100%; 
    
      /* Center and scale the image nicely */
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
    }
</style>
@if (MediaCostants.ImageExtensions.Contains(Model.Media.Type.ToUpper()))
{
    <img style="display: block;-webkit-user-select: none;margin: auto; max-width: 100%; max-height: 100%" src="@Model.BasePath@Model.Media.FileName">
}
else
{
    <video style="max-width: 100%; max-height: 100%" controls="controls" autoplay="autoplay" muted loop class="img-rounded-trasparent w-100 shadow-1-strong rounded-05" alt="@Model.Media.OriginalFileName">
        <source src="@Model.BasePath@Model.Media.FileName" type="video/mp4">
    </video>
}