                    <a onclick="openModal('#modalSectors')" class="button-white-dashed-veesy">+</a>
                    <a onclick="openModal('#modalSectors')" class="button-white-dashed-veesy">+</a>
                    <a onclick="openModal('#modalSectors')" class="button-white-dashed-veesy">+</a>
