@model Veesy.Presentation.Model.Account.BasicInfoViewModel
@{
    ViewData["Title"] = "Basic Info";
}

<div class="d-flex pt-7rem">
    <div class="col-2 col-sm-12 col-md-3">
        <div class="ps-3">
            <nav class="breadcrumb-container" aria-label="Percorso di navigazione">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><i class="fa-solid fa-house me-2"></i><a class="breadcrumb-a me-2" href="#">dashboard</a><i class="fa-solid fa-chevron-right"></i></li>
                    <li class="breadcrumb-item"><a class="breadcrumb-a me-2" href="#">portfolio</a><i class="fa-solid fa-chevron-right"></i></li>
                    <li class="breadcrumb-item"><a class="breadcrumb-a" href="#"><strong>basic info</strong></a></li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="col-8 col-md-6">
        <h3>Basic Info</h3>
        <div class="empty-veesy"></div>
        <div class="d-flex">
            <div class="col-sm-3 col-md-3">
                <div class="text-center">
                    <img src="https://images.unsplash.com/photo-1633332755192-727a05c4013d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8dXNlcnxlbnwwfHwwfHx8MA%3D%3D&w=1000&q=80" class="img-thumbnail rounded-circle" alt="user-image">
                </div>
            </div>
            <div class="col-sm-9 col-md-9">
                <a class="grey-link"><i class="fa-regular fa-pen-to-square pe-1"></i><strong>edit</strong></a>
            </div>
        </div>
        <div class="empty-veesy"></div>
        <div class="d-flex">
            <div class="col-sm-12 col-md-6 col-lg-6 me-2">
                <div class="d-flex">
                    <div class="col-9">
                        <p class="mb-0"><strong>Name and Surname*</strong></p>
                        <p class="mb-0">@Model.Name @Model.Surname</p>
                    </div>
                    <div class="col-3 text-end"><a class="grey-link"><i class="fa-regular fa-pen-to-square pe-1"></i><strong>edit</strong></a></div>
                </div>
                <hr class="hr"/>
                <div class="d-flex">
                    <div class="col-9">
                        <p class="mb-0"><strong>Email*</strong></p>
                        <p class="mb-0">@Model.Email</p>
                    </div>
                    <div class="col-3 text-end"><a class="grey-link"><i class="fa-regular fa-pen-to-square pe-1"></i><strong>edit</strong></a></div>
                </div>
                <hr class="hr"/>
            </div>
            <div class="col-sm-12 col-md-6 ms-2">
                <div class="d-flex">
                    <div class="col-9">
                        <p class="mb-0"><strong>Username*</strong></p>
                        <p class="mb-0 color-red">@Model.Username</p>
                    </div>
                    <div class="col-3 text-end"><a class="grey-link"><i class="fa-regular fa-pen-to-square pe-1"></i><strong>edit</strong></a></div>
                </div>
                <hr class="hr"/>
                <div class="d-flex">
                    <div class="col-9">
                        <p class="mb-0"><strong>Password*</strong></p>
                        <p class="mb-0">***********</p>
                    </div>
                    <div class="col-3 text-end"><a class="grey-link"><i class="fa-regular fa-pen-to-square pe-1"></i><strong>edit</strong></a></div>
                </div>
                <hr class="hr"/>
            </div>
            <div class="col-sm-12 col-md-6 ms-2">
                <div class="d-flex">
                    <div class="col-9">
                        <p class="mb-0"><strong>Category*</strong></p>
                        <p class="mb-0 color-red">@Model.Category</p>
                    </div>
                    <div class="col-3 text-end"><a class="grey-link"><i class="fa-regular fa-pen-to-square pe-1"></i><strong>edit</strong></a></div>
                </div>
                <hr class="hr"/>
                <div class="d-flex">
                    <div class="col-9">
                        <p class="mb-0"><strong>Dashboard Language</strong></p>
                        <p class="mb-0">English (default)</p>
                    </div>
                </div>
                <hr class="hr"/>
            </div>
            <div class="col-sm-12 col-md-6 ms-2">
                <div class="d-flex">
                    @if (string.IsNullOrEmpty(@Model.VatNumber))
                    {
                        <div class="col-9">
                            <p class="mb-0"><strong>VAT Number</strong></p>
                            <p class="mb-0 color-red">information missing</p>
                        </div>
                        <div class="col-3 text-end">
                            <a class="red-link"><i class="fa-regular fa-pen-to-square pe-1"></i><strong>add info</strong></a>
                        </div>
                    }
                    else
                    {
                        <div class="col-9">
                            <p class="mb-0"><strong>VAT Number</strong></p>
                            <p class="mb-0 color-red">@Model.VatNumber</p>
                        </div>
                        <div class="col-3 text-end">
                            <a class="grey-link"><i class="fa-regular fa-pen-to-square pe-1"></i><strong>edit</strong></a>
                        </div>
                    }
                </div>
                <hr class="hr"/>
                <div class="d-flex">
                    @if (string.IsNullOrEmpty(@Model.VatNumber))
                    {
                        <div class="col-9">
                            <p class="mb-0"><strong>Phone Number</strong></p>
                            <p class="mb-0 color-red">information missing</p>
                        </div>
                        <div class="col-3 text-end">
                            <a class="red-link"><i class="fa-regular fa-pen-to-square pe-1"></i><strong>add info</strong></a>
                        </div>
                    }
                    else
                    {
                        <div class="col-9">
                            <p class="mb-0"><strong>Phone Number</strong></p>
                            <p class="mb-0 color-red">@Model.PhoneNumber</p>
                        </div>
                        <div class="col-3 text-end">
                            <a class="grey-link"><i class="fa-regular fa-pen-to-square pe-1"></i><strong>edit</strong></a>
                        </div>
                    }
                </div>
                <hr class="hr"/>
            </div>
        </div>
        <div class="empty-veesy"></div>
    </div>
    <div class="col-2 col-md-3">
        <div class="d-flex justify-content-center">
            <div style="position: fixed">
                <div class="w-125 card-blue-veesy p-3">
                    <div class="text-end"><i class="fa-solid fa-circle fa-2xs" style="color: #ffffff;"></i></div>
                    <p class="mb-0" style="color: white"><strong>Do you need some help?</strong></p>
                    <a class="a-ciano" href="#">Contact us</a>
                </div>
            </div>
        </div>
    </div>
</div>
